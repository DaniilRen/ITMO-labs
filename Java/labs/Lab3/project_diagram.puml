package model.abstracted {
    abstract class Story {
        # characters: List<Character>
        + Story()
        + addCharacter(character: Character): void
    }

    record Path {
        - distance: Distance
        - startPoint: Planet
        - endPoint: Planet
        - distanceDescription: DistanceDescription
        + Path(distance: Distance, startPoint: Planet, endPoint: Planet)
        + toString(): String
    }
    
    abstract class Character {
        # name: String
        # state: State
        # location: Location
        # observedObject: Lookable
        + Character(name: String)
        # describeLocation(): void
        + setLocation(location: Location): void
        + setObservedObject(observedObject: Lookable): void
        + setState(state: State): void
        + getName(): String
        + getLocation(): Location
        + getState(): State
        + equals(): boolean
        + hashCode(): int
        + toString(): String
    } 

    record Speed {
        - distance: Distance
        - timeUnit: TimeUnit
        + Speed(distance: Distance, timeUnit: TimeUnit)
        + toString(): String
    }
}


package model.abstracted.enums {
    enum Distance {
        ONE
        TWO
        TWELVE
        ONE_THOUSAND
        TWO_THOUSAND
        FOUR_HUNDRED_THOUSAND
        - distanceText: String
        - integerRepresentation: int
        + Distance(distanceText: String, integerRepresentation: int)
        + toInteger(): int
        + toString(): String
    }

    enum Feeling {
        JOY
        SADNESS
        ANGER
        HUNGER
        DELIGHT
        - text: String
        + Feeling(text: String)
        + toString(): String
    }

    enum Hour {
        ONE
        TWO
        THREE
        FOUR
        FIVE
        SIX
        SEVEN
        EIGHT
        NINE
        TEN
        ELEVEN
        TWELVE
        - text: String
        + Hour(text: String)
        + toString(): String
    }

    enum DistanceDescription {
        LITTLE
        BIG
        HUGE
        - text: String
        + DistanceDescription(text: String)
        + toString(): String
    }

    enum SpeedDescription {
        CALM
        SCARY
        STRANGE
        - text: String
        + SpeedDescription(text: String)
        + toString(): String
    }

    enum State {
        EATING
        SLEEPING
        WALKING
        - text: String
        + State(text: String)
        + toString(): String
    }

    enum TimeUnit {
        SECOND
        MINUTE
        HOUR
        - text: String
        + TimeUnit(text: String)
        + toString(): String
    }

    enum Wish {
        EAT
        SLEEP
        REST
        - text: String
        - feeling: Feeling
        + Wish(text: String, feeling: Feeling)
        + toString(): String
        + toFeeling(): Feeling
    }
}

