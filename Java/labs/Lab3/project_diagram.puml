package model.objects {
    record Compartment {
        - type: String
        + toString(): String
    }

    record Food {
        - name: String
        + toString(): String
    }

    record Planet {
        - name: String
        + toString(): String
        + attractViews(): String
    }

    class Rocket {
        - compartments: ArrayList<Compartment>
        - name: String
        - speed: Speed
        - path: Path
        + Rocket(name: String, compartments: ArrayList<Compartment>)
        + setPath(path: Path): void
        + setSpeed(speed: Speed): void
        + getPath(): Path
        + getSpeed(): Speed
        + getCompartments(): ArrayList<Compartment>
        + checkUniqueCompartments(compartments: ArrayList<Compartment>): void
        + getName(): String
        + toString(): String
    }
}

package model.exceptions {
    exception StateFieldNotSetException {
        + StateFieldNotSetException(message: String)
        + getMessage(): String
    }

    exception NotUniqueCompartmentsException {
        + NotUniqueCompartmentsException(message: String)
        + getMessage(): String
    }

    exception EmptyParamsException {
        + EmptyParamsException(message: String)
        + getMessage(): String
    }
}

package model {
    class TaskStory extends model.abstracted.Story {
        - neznaika: Neznaika
